<div class="comment">
	<p class="notice"></p>
	<h3><%= comment.name %></h3>
	<p><%= comment.body %></p>
	<% if admin_signed_in? %>
		<p>
		  <%= link_to 'Destroy Comment', article_comment_path(@article, comment),
		               method: :delete,
		               data: { confirm: 'Are you sure?' } %>
		</p>
	<% end %>
</div>