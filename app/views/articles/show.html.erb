<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<strong>Tags:</strong>
<ul>
	<% @article.tag_list.each do |tag| %>
		<li><%= raw link_to tag, tag_path(tag) %></li>
	<% end %>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>


<%= link_to 'Articles', articles_path %>
<%= link_to 'Edit', edit_article_path(@article) %>